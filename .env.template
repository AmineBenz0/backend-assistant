# =============================================================================
# Kotaemon Backend Environment Configuration Template
# =============================================================================
# Copy this file to .env and fill in your actual values
# Required variables are marked with [REQUIRED]
# Optional variables have default values or are marked with [OPTIONAL]

# =============================================================================
# LLM Service Configuration
# =============================================================================

# Azure OpenAI (Primary LLM Provider) [REQUIRED]
AZURE_OPENAI_API_KEY=your_azure_openai_api_key_here
AZURE_OPENAI_BASE_URL=https://your-resource.openai.azure.com
AZURE_OPENAI_API_VERSION=2025-03-01-preview
AZURE_OPENAI_CHAT_DEPLOYMENT=gpt-4o
AZURE_OPENAI_EMBEDDINGS_DEPLOYMENT=text-embedding-3-large

# OpenAI (Alternative LLM Provider) [OPTIONAL]
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_BASE_URL=https://api.openai.com/v1
OPENAI_CHAT_MODEL=gpt-4o-mini
OPENAI_EMBEDDINGS_MODEL=text-embedding-3-small

# Anthropic (Alternative LLM Provider) [OPTIONAL]
ANTHROPIC_API_KEY=your_anthropic_api_key_here
ANTHROPIC_CHAT_MODEL=claude-3-5-sonnet-20241022

# Cohere (Alternative Embeddings Provider) [OPTIONAL]
COHERE_API_KEY=your_cohere_api_key_here

# GraphRAG Configuration [REQUIRED for Graph Building]
GRAPHRAG_API_KEY=your_graphrag_api_key_here
GRAPHRAG_BASE_URL=https://api.graphrag.ai

# =============================================================================
# Database Service Configuration
# =============================================================================

# ChromaDB (Vector Database) [REQUIRED]
CHROMADB_URL=http://localhost:8001
CHROMA_HOST=localhost
CHROMA_PORT=8001

# Neo4j (Graph Database) [REQUIRED]
NEO4J_URI=bolt://localhost:7687
NEO4J_USERNAME=neo4j
NEO4J_PASSWORD=password
NEO4J_DATABASE=neo4j

# ArangoDB (Alternative Graph Database) [OPTIONAL]
ARANGODB_URL=http://localhost:8529
ARANGODB_USERNAME=root
ARANGODB_PASSWORD=password
ARANGODB_DATABASE=kotaemon

# Weaviate (Alternative Vector Database) [OPTIONAL]
WEAVIATE_URL=http://localhost:8080
WEAVIATE_API_KEY=your_weaviate_api_key_here

# Qdrant (Alternative Vector Database) [OPTIONAL]
QDRANT_URL=http://localhost:6333
QDRANT_API_KEY=your_qdrant_api_key_here

# =============================================================================
# MinIO Object Storage Configuration [REQUIRED]
# =============================================================================
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_SECURE=false
MINIO_BUCKET=kotaemon-pipeline

# =============================================================================
# Redis Configuration [OPTIONAL]
# =============================================================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# =============================================================================
# Pipeline Configuration
# =============================================================================

# Logging and Monitoring [OPTIONAL]
LOG_LEVEL=INFO
ENABLE_METRICS=true
ENABLE_LOGGING=true

# Pipeline Performance [OPTIONAL]
MAX_CONCURRENT_JOBS=5
JOB_TIMEOUT_SECONDS=3600
RETRY_ATTEMPTS=3
RETRY_DELAY_SECONDS=30

# =============================================================================
# Development and Testing Configuration
# =============================================================================

# Environment [OPTIONAL]
ENVIRONMENT=development
DEBUG=false
TESTING=false

# Mock Services for Testing [OPTIONAL]
USE_MOCKS=false
MOCK_LLM_RESPONSES=false
MOCK_EMBEDDING_RESPONSES=false

# =============================================================================
# Security Configuration [OPTIONAL]
# =============================================================================

# API Security
ENABLE_AUTHENTICATION=false
ENABLE_AUTHORIZATION=false
API_KEY_HEADER=X-API-Key

# CORS Configuration
CORS_ENABLED=true
CORS_ALLOWED_ORIGINS=*
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE
CORS_ALLOWED_HEADERS=*

# =============================================================================
# Additional Service Configuration [OPTIONAL]
# =============================================================================

# Azure Document Intelligence
AZURE_DI_ENDPOINT=
AZURE_DI_CREDENTIAL=

# Adobe PDF Services
PDF_SERVICES_CLIENT_ID=
PDF_SERVICES_CLIENT_SECRET=

# PDF.js Configuration
PDFJS_VERSION_DIST=pdfjs-4.0.379-dist

# Local Model Configuration (for offline usage)
LOCAL_MODEL=llama3.1:8b
LOCAL_MODEL_EMBEDDINGS=nomic-embed-text
LOCAL_EMBEDDING_MODEL_DIM=768
LOCAL_EMBEDDING_MODEL_MAX_TOKENS=8192

# =============================================================================
# GraphRAG Specific Configuration
# =============================================================================

# GraphRAG Model Configuration
GRAPHRAG_LLM_MODEL=gpt-4o
GRAPHRAG_EMBEDDING_MODEL=text-embedding-3-large
GRAPHRAG_EMBEDDING_API_KEY=your_embedding_api_key_here

# GraphRAG Settings
USE_CUSTOMIZED_GRAPHRAG_SETTING=true